<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --qoder-bg: #0d1117;
            --qoder-surface: #161b22;
            --qoder-surface-hover: #21262d;
            --qoder-border: #30363d;
            --qoder-text: #f0f6fc;
            --qoder-text-secondary: #8b949e;
            --qoder-primary: #238636;
            --qoder-primary-hover: #1a6b2b;
            --qoder-success: #3fb950;
            --qoder-warning: #d29922;
            --qoder-danger: #da3633;
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--qoder-bg);
            color: var(--qoder-text);
            font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            overflow: hidden;
        }

        /* 动态背景粒子效果 */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .particle {
            position: absolute;
            background: var(--qoder-success);
            border-radius: 50%;
            opacity: 0.08;
            animation: float 20s infinite linear;
        }

        @keyframes float {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 0.1;
            }
            90% {
                opacity: 0.1;
            }
            100% {
                transform: translateY(-100vh) rotate(360deg);
                opacity: 0;
            }
        }
        
        .login-container {
            background: var(--qoder-surface);
            border: 1px solid var(--qoder-border);
            border-radius: 16px;
            padding: 48px 40px;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.05),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            width: 100%;
            max-width: 420px;
            backdrop-filter: blur(20px);
            position: relative;
            overflow: hidden;
            animation: slideUp 0.6s ease-out;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--qoder-primary), transparent);
        }
        
        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo {
            width: 64px;
            height: 64px;
            background: linear-gradient(135deg, var(--qoder-primary), var(--qoder-success));
            border-radius: 16px;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            position: relative;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(35, 134, 54, 0.3);
        }

        .logo::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
            animation: shimmer 3s infinite;
        }

        @keyframes shimmer {
            0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }
        
        .login-header h1 {
            color: var(--qoder-text);
            font-weight: 600;
            font-size: 28px;
            margin-bottom: 8px;
            letter-spacing: -0.5px;
        }
        
        .login-header p {
            color: var(--qoder-text-secondary);
            font-size: 14px;
            margin: 0;
        }

        .form-group {
            margin-bottom: 24px;
            position: relative;
        }

        .form-label {
            color: var(--qoder-text);
            font-weight: 500;
            font-size: 14px;
            margin-bottom: 8px;
            display: block;
        }
        
        .form-control {
            background: var(--qoder-bg);
            border: 1px solid var(--qoder-border);
            border-radius: 8px;
            padding: 14px 16px;
            color: var(--qoder-text);
            font-size: 14px;
            transition: all 0.2s ease;
            width: 100%;
            position: relative;
        }

        .form-control::placeholder {
            color: var(--qoder-text-secondary);
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--qoder-primary);
            box-shadow: 0 0 0 2px rgba(35, 134, 54, 0.2);
            background: var(--qoder-surface);
        }

        .input-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--qoder-text-secondary);
            font-size: 14px;
            z-index: 1;
        }

        .form-control.has-icon {
            padding-left: 44px;
        }
        
        .btn-login {
            background: linear-gradient(135deg, var(--qoder-primary), var(--qoder-primary-hover));
            border: none;
            width: 100%;
            padding: 14px 24px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            color: white;
            transition: all 0.2s ease;
            position: relative;
            overflow: hidden;
            margin-top: 8px;
        }

        .btn-login::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }
        
        .btn-login:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 25px rgba(35, 134, 54, 0.4);
        }

        .btn-login:hover::before {
            left: 100%;
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .alert {
            background: var(--qoder-surface);
            border: 1px solid var(--qoder-danger);
            border-radius: 8px;
            color: var(--qoder-danger);
            padding: 12px 16px;
            margin-bottom: 24px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .alert::before {
            content: '\f071';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
        }

        .loading {
            display: none;
        }

        .loading.show {
            display: inline-block;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <!-- 动态背景粒子 -->
    <div class="particles" id="particles"></div>

    <div class="login-container">
        <div class="login-header">
            <div class="logo">
                <i class="fas fa-cube"></i>
            </div>
            <h1>Point-Tron</h1>
            <p>波场网络区块链后台管理系统</p>
        </div>
        
        <% if (error) { %>
            <div class="alert">
                <%= error %>
            </div>
        <% } %>
        
        <form id="loginForm">
            <div class="form-group">
                <label class="form-label">用户名</label>
                <div style="position: relative;">
                    <i class="input-icon fas fa-user"></i>
                    <input type="text" class="form-control has-icon" id="username" name="username" placeholder="请输入用户名" required>
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label">密码</label>
                <div style="position: relative;">
                    <i class="input-icon fas fa-lock"></i>
                    <input type="password" class="form-control has-icon" id="password" name="password" placeholder="请输入密码" required>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary btn-login">
                <i class="loading fas fa-spinner"></i>
                <span class="btn-text">
                    <i class="fas fa-sign-in-alt"></i> 登录
                </span>
            </button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 创建动态粒子效果
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 20;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                // 随机尺寸和位置
                const size = Math.random() * 4 + 2;
                particle.style.width = size + 'px';
                particle.style.height = size + 'px';
                particle.style.left = Math.random() * 100 + '%';
                
                // 随机动画延迟
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 15) + 's';
                
                particlesContainer.appendChild(particle);
            }
        }

        // 表单提交处理
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const submitBtn = e.target.querySelector('.btn-login');
            const loadingIcon = submitBtn.querySelector('.loading');
            const btnText = submitBtn.querySelector('.btn-text');
            
            // 显示加载状态
            loadingIcon.classList.add('show');
            btnText.style.display = 'none';
            submitBtn.disabled = true;
            
            try {
                const response = await fetch('/api/auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, password })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    localStorage.setItem('token', result.data.token);
                    
                    // 成功动画
                    submitBtn.style.background = 'linear-gradient(135deg, #3fb950, #3fb950)';
                    btnText.innerHTML = '<i class="fas fa-check"></i> 登录成功';
                    btnText.style.display = 'inline-block';
                    loadingIcon.classList.remove('show');
                    
                    setTimeout(() => {
                        window.location.href = '/admin';
                    }, 1000);
                } else {
                    throw new Error(result.error || '登录失败');
                }
            } catch (error) {
                // 错误动画
                submitBtn.style.background = 'linear-gradient(135deg, #da3633, #da3633)';
                btnText.innerHTML = '<i class="fas fa-times"></i> ' + (error.message || '网络错误，请重试');
                btnText.style.display = 'inline-block';
                loadingIcon.classList.remove('show');
                
                setTimeout(() => {
                    submitBtn.style.background = 'linear-gradient(135deg, var(--qoder-primary), var(--qoder-primary-hover))';
                    btnText.innerHTML = '<i class="fas fa-sign-in-alt"></i> 登录';
                    submitBtn.disabled = false;
                }, 2000);
            }
        });

        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            
            // 输入框聚焦动画
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'scale(1.02)';
                    this.parentElement.style.transition = 'transform 0.2s ease';
                });
                
                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'scale(1)';
                });
            });
        });
    </script>
</body>
</html>